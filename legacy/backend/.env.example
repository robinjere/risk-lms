# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=risk_lms
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=2147483648
UPLOAD_DIR=./uploads
VIDEO_DIR=./uploads/videos
QUESTION_DIR=./uploads/questions
CERTIFICATE_DIR=./uploads/certificates

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Certificate Configuration
CERTIFICATE_BASE_URL=http://localhost:5000/certificates
QR_CODE_SIZE=200

# Translation API (configure based on your chosen service)
TRANSLATION_API_KEY=your_translation_api_key
TRANSLATION_SERVICE=google

# Email Configuration (optional, for certificate delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
